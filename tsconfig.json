{
  "include": ["src", "cypress"],
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "types": ["cypress"],
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
